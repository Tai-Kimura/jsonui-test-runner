{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://jsonui.dev/schemas/flow-test.schema.json",
  "title": "JsonUI Flow Test",
  "description": "Schema for multi-screen flow test cases (N:1 mapping with layout JSONs)",
  "type": "object",

  "definitions": {
    "fileStep": {
      "type": "object",
      "description": "Reference to a screen test file to execute",
      "properties": {
        "file": {
          "type": "string",
          "minLength": 1,
          "description": "Path to screen test file (e.g., 'screens/login' resolves to 'screens/login.test.json')"
        },
        "case": {
          "type": "string",
          "description": "Specific test case name to run (optional, runs all cases if not specified)"
        },
        "cases": {
          "type": "array",
          "items": { "type": "string" },
          "description": "List of test case names to run (optional)"
        }
      },
      "required": ["file"],
      "additionalProperties": false
    },
    "inlineStep": {
      "allOf": [
        {
          "type": "object",
          "properties": {
            "screen": {
              "type": "string",
              "minLength": 1,
              "description": "Screen identifier (matches source layout name without extension)"
            }
          },
          "required": ["screen"]
        },
        {
          "oneOf": [
            { "$ref": "actions.schema.json#/definitions/action" },
            { "$ref": "actions.schema.json#/definitions/assertion" }
          ]
        }
      ]
    },
    "flowStep": {
      "oneOf": [
        { "$ref": "#/definitions/fileStep" },
        { "$ref": "#/definitions/inlineStep" }
      ]
    }
  },

  "properties": {
    "$schema": {
      "type": "string",
      "description": "Reference to this schema"
    },

    "type": {
      "const": "flow",
      "description": "Test type identifier"
    },

    "sources": {
      "type": "array",
      "description": "Source files involved in this flow",
      "items": {
        "type": "object",
        "properties": {
          "layout": {
            "type": "string",
            "description": "Path to the JsonUI layout file"
          },
          "spec": {
            "type": "string",
            "description": "Path to the specification document"
          },
          "alias": {
            "type": "string",
            "description": "Short alias for referencing this screen in steps"
          }
        },
        "required": ["layout"],
        "additionalProperties": false
      },
      "minItems": 1
    },

    "metadata": {
      "type": "object",
      "description": "Test metadata",
      "properties": {
        "name": {
          "type": "string",
          "description": "Human-readable test name"
        },
        "description": {
          "type": "string",
          "description": "Detailed description of the user flow being tested"
        },
        "generatedAt": {
          "type": "string",
          "format": "date-time",
          "description": "ISO 8601 timestamp when this test was generated"
        },
        "generatedBy": {
          "type": "string",
          "description": "Agent or tool that generated this test"
        },
        "tags": {
          "type": "array",
          "items": { "type": "string" },
          "description": "Tags for filtering tests"
        }
      },
      "required": ["name"],
      "additionalProperties": false
    },

    "platform": {
      "oneOf": [
        {
          "type": "string",
          "enum": ["ios", "android", "web", "all"]
        },
        {
          "type": "array",
          "items": {
            "type": "string",
            "enum": ["ios", "android", "web"]
          },
          "minItems": 1,
          "uniqueItems": true
        }
      ],
      "default": "all",
      "description": "Target platform(s) for this test"
    },

    "initialState": {
      "type": "object",
      "description": "Initial application state before flow execution",
      "properties": {
        "screen": {
          "type": "string",
          "description": "Starting screen identifier"
        },
        "viewModels": {
          "type": "object",
          "description": "Initial state for each screen's ViewModel",
          "additionalProperties": {
            "type": "object",
            "additionalProperties": true
          }
        }
      },
      "additionalProperties": false
    },

    "setup": {
      "type": "array",
      "description": "Steps to execute before the flow test",
      "items": { "$ref": "#/definitions/flowStep" }
    },

    "teardown": {
      "type": "array",
      "description": "Steps to execute after the flow test",
      "items": { "$ref": "#/definitions/flowStep" }
    },

    "steps": {
      "type": "array",
      "description": "Flow test steps with screen context",
      "items": { "$ref": "#/definitions/flowStep" },
      "minItems": 1
    },

    "checkpoints": {
      "type": "array",
      "description": "Named checkpoints for debugging and reporting",
      "items": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string",
            "description": "Checkpoint name"
          },
          "afterStep": {
            "type": "integer",
            "minimum": 0,
            "description": "Step index (0-based) after which this checkpoint occurs"
          },
          "screenshot": {
            "type": "boolean",
            "default": false,
            "description": "Take screenshot at this checkpoint"
          }
        },
        "required": ["name", "afterStep"],
        "additionalProperties": false
      }
    },

    "descriptionFile": {
      "type": "string",
      "description": "Path to external description JSON file (relative to test file)"
    }
  },

  "required": ["type", "metadata", "steps"],
  "additionalProperties": false
}
